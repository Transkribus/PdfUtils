<configuration>
  <appender name="Main" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %5p | [%c{1}] %m%n</pattern>
    </encoder>
  </appender>
  <logger name="org.apache" level="INFO">
    <appender-ref ref="Main"/>
  </logger>
  <root level="DEBUG">
    <appender-ref ref="Main"/>
  </root>
</configuration>